<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for AddressInfoFragment
     Collects address information: city, postal code, and street address
     Background color: light blue (#E3F2FD)
     Contains: title, 3 input fields with labels, and a Done button
     Wrapped in ScrollView to ensure button is always accessible
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:fillViewport="true">

    <!-- Main content container with vertical orientation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

    <!-- Fragment title displayed at the top -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address Information"
        android:textSize="24sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <!-- Label for City input field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="4dp" />

    <!-- EditText for city input
         Uses text input type for alphabetic keyboard
    -->
    <EditText
        android:id="@+id/etCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <!-- Label for Postal Code input field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postal code"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="4dp" />

    <!-- EditText for postal code input
         Uses text input type to allow both numeric and alphanumeric postal codes
    -->
    <EditText
        android:id="@+id/etPostalCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <!-- Label for Address input field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="4dp" />

    <!-- EditText for street address input
         Uses text input type for full address entry
    -->
    <EditText
        android:id="@+id/etAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=""
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:inputType="text"
        android:layout_marginBottom="32dp" />

    <!-- Done button to submit address info and complete registration
         Uses Material Button with custom purple background color
         Centered horizontally with generous padding
         When clicked, triggers creation of Student object and displays in SubFragment
    -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done!"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6A5ACD"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        app:cornerRadius="24dp" />
    </LinearLayout>
</ScrollView>
