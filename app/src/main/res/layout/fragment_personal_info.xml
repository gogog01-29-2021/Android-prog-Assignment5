<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for PersonalInfoFragment
     Collects personal information: name, age, and student number
     Background color: light pink (#FCE4EC)
     Contains: title, 3 input fields with labels, and a Next button
     Wrapped in ScrollView to ensure button is always accessible
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCE4EC"
    android:fillViewport="true">

    <!-- Main content container with vertical orientation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

    <!-- Fragment title displayed at the top -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Information"
        android:textSize="24sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <!-- Label for Name input field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="4dp" />

    <!-- EditText for user's name input
         Uses text input type for alphabetic keyboard
    -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your name"
        android:textColorHint="#AAAAAA"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <!-- Label for Age input field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="4dp" />

    <!-- EditText for user's age input
         Uses number input type for numeric keyboard
         Age is validated to be between 15-100 in fragment code
    -->
    <EditText
        android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your Age"
        android:textColorHint="#AAAAAA"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:inputType="number"
        android:layout_marginBottom="16dp" />

    <!-- Label for Student Number input field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student Number"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="4dp" />

    <!-- EditText for student number input
         Uses text input type for alphanumeric student IDs
    -->
    <EditText
        android:id="@+id/etStudentNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Your StudentNumber"
        android:textColorHint="#AAAAAA"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:inputType="text"
        android:layout_marginBottom="32dp" />

    <!-- Next button to submit personal info and proceed to address collection
         Uses Material Button with custom purple background color
         Centered horizontally with generous padding
    -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6A5ACD"
        android:paddingStart="48dp"
        android:paddingEnd="48dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        app:cornerRadius="24dp" />
    </LinearLayout>
</ScrollView>
