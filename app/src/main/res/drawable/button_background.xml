<?xml version="1.0" encoding="utf-8"?>
<!-- Custom button background drawable
     Creates a rounded rectangle shape with purple color
     Used by: Next button in PersonalInfoFragment, Done button in AddressInfoFragment
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Solid fill color: medium slate blue (#6A5ACD) -->
    <solid android:color="#6A5ACD" />
    <!-- Rounded corners with 24dp radius for smooth, modern appearance -->
    <corners android:radius="24dp" />
</shape>
